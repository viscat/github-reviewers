{
    "name": "Github reviewers",
    "version": "1.0.3",
    "description": "Copy&Paste reviewers to your GitHub Pull Requests",
    "permissions": [
        "storage"
    ],
    "options_page": "options.html",
    "icons": {
        "16": "images/eye16.png",
        "32": "images/eye32.png",
        "48": "images/eye48.png",
        "128": "images/eye128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "common.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 2
}

